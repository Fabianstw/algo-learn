{
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "isolatedModules": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
